[% INCLUDE playnow/header.tt
   title = 'Word Games to Play Online at Today\'s Word' %]

<div id="index_top">

    <div id="welcome_owl">
        <img src="/static/images/todays_word_is_owl.png" alt="Today's Word is:" width="350px" />
    </div>
    
    <div id="todays_word_div">
        <h1>[% todaysword.word %]</h1>
        <br />
        [% MACRO floor(n)
            GET n
            FILTER format("%d"); %]

        [% IF todaysword.definitions %]
        	<ol id="todaysword_definitions">
                [% IF todaysword.wiki_definitions %]
                    [% FOR definition IN todaysword.wiki_definitions %]
            			<li>[% definition %]</li>
            		[% END %]
                [% END %]
                [% FOR definition IN todaysword.definitions %]
        			<li>[% definition %]</li>
        		[% END %]
        	</ol>
        [% END %]

        [% IF todaysword.synonyms %]
            <b>Synonyms:</b><br />
            <div id="todaysword_synonyms_div">
                [% IF todaysword.synonyms.size > 4 %]
                    [% item_per_column = floor(todaysword.synonyms.size / 3) %]
                    [% count = 0 %]
            	    <ul id="todaysword_synonyms">
                    [% FOR synonym IN todaysword.synonyms %]
                        <li>[% synonym %]</li>
                        [% count = count + 1 %]
                        [% IF count == item_per_column %]
                            </ul>
                            <ul id="todaysword_synonyms">
                            [% count = 0 %]
                        [% END %]
                    [% END %]
                [% ELSE %]
                    <ul id="todaysword_synonyms">
                    [% FOR synonym IN todaysword.synonyms %]
                        <li>[% synonym %]</li>
                    [% END %]
                    </ul>
                [% END %]
            	</ul>
            </div>
        [% END %]
        <div class="clear"></div>
        
        <div id="dict_link"><a href="http://dictionary.reference.com/browse/[% todaysword.word %]">More via Dictionary.com</a></div>
        <div id="wikidict_link"><a href="http://en.wiktionary.org/wiki/[% todaysword.word %]">More via Wiktionary</a></div>
        
    </div>
    <div class="clear"></div>    
</div>
<div class="clear"></div>

